#include <stdio.h>

int main(){
     int v_i[100],v[100];
     int n,i,j;

     printf("Digite o tamanho do vetor: ");
     scanf("%d",&n);

     printf("Digite o vetor: ");
     for (i=0;i<n;i++){
         scanf("%d",&v[i]);
     }

     for (i=0;i<n;i++){
         printf("%d ",v[i]);
     }
     printf("\n");

     for (i=n-1,j=0;i>=0;i--,j++){
         v_i[j]=v[i];
     }

     for (i=0;i<n;i++){
         printf("%d ",v_i[i]);
     }
     printf("\n");

     return(0);
}
